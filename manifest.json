{
  "manifest_version": 3,
  "name": "Auto Class Modifier",
  "version": "1.0",
  "description": "Extension PASV",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "action": {
    "icons": {
      "16": "./icons/16x16.png",
      "32": "./icons/32x32.png",
      "128": "./icons/128x128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js" 
  },
  "content_scripts": [
    {
      "matches": ["*://*.coding.pasv.us/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "./icons/16x16.png",
    "32": "./icons/32x32.png",
    "128": "./icons/128x128.png"
  }
}
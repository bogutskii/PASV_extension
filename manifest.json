{
  "manifest_version": 3,
  "name": "Extension PASV",
  "version": "1.0",
  "description": "Extension PASV",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "icons": {
      "16": "./icons/logo_16.png",
      "32": "./icons/logo_32.png",
      "128": "./icons/logo_128.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.coding.pasv.us/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "./icons/logo_16.png",
    "32": "./icons/logo_32.png",
    "128": "./icons/logo_128.png"
  }
}